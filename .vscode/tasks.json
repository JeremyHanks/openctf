{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Create Migrations (Debug)",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceRoot}/backend/manage.py",
                "db",
                "migrate"
            ],
            "options": {
                "cwd": "${workspaceRoot}/backend",
                "env": {
                    "DATABASE_URL": "sqlite:///${workspaceRoot}/.data/openctf.db"
                }
            },
            "problemMatcher": []
        },
        {
            "taskName": "Run Migrations (Debug)",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceRoot}/backend/manage.py",
                "db",
                "upgrade"
            ],
            "options": {
                "cwd": "${workspaceRoot}/backend",
                "env": {
                    "DATABASE_URL": "sqlite:///${workspaceRoot}/.data/openctf.db"
                }
            },
            "problemMatcher": []
        }
    ]
}